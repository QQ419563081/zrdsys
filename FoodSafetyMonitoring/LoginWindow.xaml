        <Image Source="/res/username_selected.png" Canvas.Left="96" Canvas.Top="162" Width="245" Height="41"></Image>
        <Image Source="/res/password_selected.png" Canvas.Left="96" Canvas.Top="211" Width="245" Height="40"></Image>
